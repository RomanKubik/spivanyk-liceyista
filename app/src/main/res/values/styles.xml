<resources>

    <!-- Text appearances -->
    <style name="TextAppearance.Songer" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Songer.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/font_courier_new</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Songer.Item" />

    <style name="TextAppearance.Songer.Item.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextAppearance.Songer.Item.Subtitle">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="TextAppearance.Songer.Settings" />

    <style name="TextAppearance.Songer.Settings.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextAppearance.Songer.Settings.Value">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="TextAppearance.Songer.Song">
        <item name="fontFamily">@font/font_courier_new</item>
    </style>

    <style name="TextAppearance.Songer.Song.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="TextAppearance.Songer.Song.Lyrics">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextAppearance.Songer.Tutorial">
        <item name="android:textColor">@color/tutorial_on_surface</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <!-- Styles -->

    <style name="Widget.Songer"/>

    <style name="Widget.Songer.Button" parent="Widget.MaterialComponents.Button"/>

    <style name="Widget.Songer.Button.Tutorial">
        <item name="android:textColor">@color/tutorial_on_surface</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/bg_btn_outlined</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>
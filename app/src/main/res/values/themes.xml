        <item name="textAppearanceItemTitle">@style/TextAppearance.Songer.Item.Title</item>
        <item name="textAppearanceItemSubtitle">@style/TextAppearance.Songer.Item.Subtitle</item>

        <item name="textAppearanceSettingsTitle">@style/TextAppearance.Songer.Settings.Title</item>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/lastCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_history"
                app:title="@string/ttl_last_played"
                app:description="@string/dsc_last_played"/>

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/mySongsCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_my_songs"
                app:title="@string/ttl_my_songs" />

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/patrioticCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_flag_on_pole"
                app:title="@string/ttl_patriotic" />

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/bonfireCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_campfire"
                app:title="@string/ttl_bonfire_songs" />

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/abroadCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_abroad"
                app:title="@string/ttl_abroad_songs" />

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/surpriseCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_shocked"
                app:title="@string/ttl_surprise_me"
                app:description="@string/dsc_surprise_me"/>

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/allCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_books"
                app:title="@string/ttl_all_songs" />

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/favouriteCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_bookmark_button"
                app:title="@string/ttl_favourite" />

            <View style="@style/AppTheme.Separator" />

            <com.roman.kubik.songer.presentation.view.MainItemView
                android:id="@+id/webCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_72"
                app:image="@drawable/ic_web"
                app:title="@string/ttl_web"
                app:description="@string/dsc_web"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roman.kubik.spivanyklicejista">

    <application
        android:name=".general.android.SpivanykApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.main.MainActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".presentation.list.ListActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".presentation.song.SongActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.preferences.PreferencesActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".presentation.edit.EditSongActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />

    </application>

</manifest>